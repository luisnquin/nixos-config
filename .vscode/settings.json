{
    "[shellscript]": {
        "editor.defaultFormatter": "mkhl.shfmt",
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnSaveMode": "file",
        "editor.formatOnType": false
    },
    "files.associations": {
        ".shrc": "shellscript",
        "flake.lock": "json",
        "zathurarc": "shellscript",
        ".gitmux.conf": "yaml"
    },
    "[nix]": {
        "editor.defaultFormatter": "kamadorueda.alejandra",
        "editor.formatOnSaveMode": "file",
        "editor.formatOnPaste": false,
        "editor.formatOnType": false,
        "editor.formatOnSave": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "shellcheck.enable": true,
    "shellcheck.exclude": ["1090", "1091", "2002", "2005", "2121", "2148", "2207", "3046"],
    "material-icon-theme.folders.associations": {
        "terminal": "Interface",
        ".scripts": "Scripts",
        "dots": "Config",
        "system": "Controller"
    },
    "cSpell.words": ["inconsolata", "guioptions"]
}
